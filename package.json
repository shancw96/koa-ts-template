{
  "name": "koa-pic-base",
  "version": "0.0.1",
  "description": "file-server based on koa",
  "main": "dist/index.js",
  "scripts": {
    "watch-server": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/index.ts",
    "build-ts": "tsc",
    "serve": "node dist/index.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix"
  },
  "engines": {
    "node": "14.x.x",
    "npm": "6.x.x"
  },
  "keywords": [
    "koa",
    "file-server"
  ],
  "author": "shancw",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^10.1.1",
    "dotenv": "^16.0.0",
    "koa": "^2.13.4",
    "koa-jwt": "^4.0.3"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "nodemon": "^2.0.15"
  }
}
